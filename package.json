  "version": "1.0.0",
  "description": "Detecting motion by camera and notifying user",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js --pid_path=bin/.pid",
    "stop": "cd bin && ./stop.sh && cd ..",
