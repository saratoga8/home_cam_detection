    "test:base": "mocha test/*.js --exit",
    "test:telegram": "mocha test/telegram/*.js --exit",
    "cucumber": "cucumber-js features/motion.feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saratoga8/home_cam_detection.git"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "dotenv": "^10.0.0",
    "js-yaml": "^4.1.0",
    "jsdoc": "^3.6.7",
    "log4js": "^6.3.0",
    "node-telegram-bot-api": "^0.56.0",
    "process": "^0.11.10",
    "stable": "^0.1.8",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.1",
    "async-wait-until": "^2.0.9",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-events": "^0.0.3",
    "chai-exec": "^2.1.1",
